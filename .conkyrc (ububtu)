conky.config = {
    background = true,
    update_interval = 1.0,

    double_buffer = true,
    no_buffers = true,

    cpu_avg_samples = 2,
    net_avg_samples = 2,
    diskio_avg_samples = 10,

    use_xft = true,
    font = 'DejaVu Sans Mono:size=9',
    xftalpha = 1,
    override_utf8_locale = true,

    alignment = 'top_right',
    gap_x = 10,
    gap_y = 10,
    minimum_width = 380,
    minimum_height = 100,

    own_window = true,
    own_window_type = 'normal',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 0,

    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,

    format_human_readable = true,
    short_units = true,
    use_spacer = 'none',
    temperature_unit = 'celsius',

    default_color = '#D1ECFF',
    color1 = '#39BBFF',
    color2 = '#8FCFF9',
    color3 = '#2CFF00',
    color4 = '#FF0000',
    color5 = '#FFFF52',
    color6 = '#FF801A',
};

conky.text = [[
# ███     ██  █████   ██████   ██████░██       █████  ██████
#░░██  █ ░██ ██░░░██ ░░░░░░██ ░░░██░ ░██████  ██░░░██░░██░░█
# ░██ ███░██░███████  ███████   ░██  ░██░░░██░███████ ░██ ░
# ░████░████░██░░░░  ██░░░░██   ░██  ░██  ░██░██░░░░  ░██
# ███░ ░░░██░░██████░░████████  ░░██ ░██  ░██░░██████░███
#░░░    ░░░  ░░░░░░  ░░░░░░░░    ░░  ░░   ░░  ░░░░░░ ░░░

#${color2}${font SonySketchEF:bold:size=14}WEATHER ${hr 2}${font}
#${font DejaVu Sans Mono:size=9}${color2}${exec curl wttr.in/nap?T0 --silent --max-time 3}${font}

${color2}${font SonySketchEF:bold:size=14}SYSTEM ${hr 2}${font}
${font DejaVu Sans Mono:size=2}${execi 130000 screenfetch -L -N | sed 's/^/\t/' | sed 's/ *$//'}
${font DejaVu Sans Mono:size=9}${voffset -62}${offset 90}${time %d %b %Y}
${voffset -15}${offset 90}${exec lsb_release -d | cut -f 3 | tr "[:upper:]" "[:lower:]"}
${voffset 0}${offset 90}Edition: ${execi 3600 awk -F= '/ID=/{printf $2" "} /RELEASE=/{printf $2" "} /NAME=/{print $2}' /etc/lsb-release}
${voffset 0}${offset 90}Kernel: ${kernel}
${voffset 0}${offset 90}Uptime: $uptime

${color1}CPU Load: ${alignr}${color}${cpubar cpu0 20,240}
${voffset 8}${color2}${top name 1} ${alignr}${top pid 1} ${color}${top cpu 1} %
${color2}${top name 2} ${alignr}${top pid 2} ${color}${top cpu 2} %
${color2}${top name 3} ${alignr}${top pid 3} ${color}${top cpu 3} %

${color5}RAM Usage: ${alignr}${color}${membar 20,240}
${voffset 8}${color2}${top_mem name 1} ${alignr}${color}${top_mem mem 1} %
${color2}${top_mem name 2} ${alignr}${color}${top_mem mem 2} %
${color2}${top_mem name 3} ${alignr}${color}${top_mem mem 3} %

${color5}Disk Access: ${alignr}${color}${diskiograph /dev/sda 20,240 FFFF52 FF801A -t}
${voffset 8}${color2}/dev/sda ${alignr}${color}${fs_used /} / ${fs_size /} ${color3}($fs_used_perc%)

${color2}${font SonySketchEF:bold:size=14}NETWORK ${hr 2}${font}

State:${alignr}${if_existing /sys/class/net/wlp8s0/operstate up}${color green}ONLINE${else}${color red}OFFLINE${endif}${color}
ISP: ${alignr}${execi 6000 curl -s ipinfo.io/org}
Local IP: ${alignr}${addr wlp8s0}
Public IP: ${alignr}${execi 300 curl -s http://ipinfo.io/ip}
Ping to 192.168.1.1: $alignr ${execi 60 ping -c 1 192.168.1.1 | grep 'avg' | cut -d '/' -f 5 | awk '{print $1 " ms"}'}
Ping to 8.8.8.8: $alignr ${execi 60 ping -c 1 8.8.8.8 | grep 'avg' | cut -d '/' -f 5 | awk '{print $1 " ms"}'}

Down: ${downspeed wlp8s0} / s ${alignr} Up: ${upspeed wlp8s0} / s
${downspeedgraph wlp8s0 20,170 ffffff ffffff} ${alignr}${upspeedgraph wlp8s0 20,170 ffffff ffffff}
Total: ${totaldown wlp8s0} ${alignr}Total: ${totalup wlp8s0}

${color2}${font SonySketchEF:bold:size=14}TIME ${hr 2}${font}
${alignc}${font SonySketchEF:bold:size=18}${time %H:%M:%S}
${alignc}${font DejaVu Sans Mono:size=12}${time %A, %d %B %Y}
]];

